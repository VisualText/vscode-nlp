{
    "name": "nlp",
    "displayName": "NLP",
    "description": "NLP++ support for Visual Studio Code",
    "version": "0.0.1",
    "enableProposedApi": true,
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:nlp",
        "onView:analyzerSequence"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "analyzerSequence",
                    "name": "Analyzer Sequence"
                },
                {
                    "id": "analyzerSequence",
                    "name": "Analyzer Sequence"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "package-explorer",
                    "title": "Package Explorer",
                    "icon": "media/dep.svg"
                }
            ]
        },
        "iconThemes": [
            {
                "id": "nlp",
                "label": "NLP Files",
                "path": "./fileicons/vs_nlp-icon-theme.json"
            }
        ],
        "languages": [
            {
                "id": "nlp",
                "aliases": [
                    "NLP++",
                    "nlp"
                ],
                "extensions": [
                    ".nlp",
                    ".nlppp",
                    ".pat"
                ],
                "configuration": "./nlp-configuration.json"
            },
            {
                "id": "seq",
                "extensions": [
                    "seq"
                ],
                "aliases": [
                    "SEQ",
                    "seq"
                ],
                "configuration": "./seq.configuration.json"
            },
            {
                "id": "txxt",
                "extensions": [
                    "txxt"
                ],
                "aliases": [
                    "TXXT",
                    "txxt"
                ],
                "configuration": "./txxt.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "nlp",
                "scopeName": "source.nlp",
                "path": "./syntaxes/nlp.tmLanguage.json"
            },
            {
                "language": "seq",
                "scopeName": "source.seq",
                "path": "./syntaxes/seq.tmLanguage.json"
            },
            {
                "language": "txxt",
                "scopeName": "source.txxt",
                "path": "./syntaxes/txxt.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "javascript",
                "scopeName": "source.nlp",
                "path": "./snippets/nlp.json"
            }
        ],
        "colors": [
            {
                "id": "keyword.region.nlp",
                "description": "Color for NLP regions.",
                "defaults": {
                    "dark": "foreground",
                    "light": "foreground",
                    "highContrast": "#010203"
                }
            }
        ],
        "commands": [
            {
                "command": "nlp.analyze",
                "title": "NLP: Analyze Text",
                "description": "Run the analyzer on text"
            },
            {
                "command": "analyzerSequence.reveal",
                "title": "Analyzer Sequence: Reveal"
            },
            {
                "command": "analyzerSequence.changeTitle",
                "title": "Analyzer Sequence: Change Title"
            },
            {
                "command": "analyzerSequence.refreshFile",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "analyzerSequence.moveUp",
                "title": "Move Up",
                "icon": {
                    "light": "resources/light/up.svg",
                    "dark": "resources/dark/up.svg"
                }
            },
            {
                "command": "analyzerSequence.moveDown",
                "title": "Move Down",
                "icon": {
                    "light": "resources/light/down.svg",
                    "dark": "resources/dark/down.svg"
                }
            },
            {
                "command": "analyzerSequence.openFile",
                "title": "Open File"
            },
            {
                "command": "analyzerSequence.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == seq",
                    "command": "nlp.analyze",
                    "group": "sequence"
                },
                {
                    "when": "resourceExtname == .txt",
                    "command": "nlp.analyze",
                    "group": "sequence"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceExtname == .seq",
                    "command": "nlp.analyze",
                    "group": "nlp"
                },
                {
                    "when": "resourceExtname == .pat || NresourceExtname == .nlp",
                    "command": "nlp.analyze",
                    "group": "nlp"
                }
            ],
            "view/title": [
                {
                    "command": "analyzerSequence.refreshEntry",
                    "when": "view == analyzerSequence",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "analyzerSequence.refreshFile",
                    "when": "view == analyzerSequence && viewItem == file",
                    "group": "inline"
                },
                {
                    "command": "analyzerSequence.moveUp",
                    "when": "view == analyzerSequence && viewItem == file",
                    "group": "inline"
                },
                {
                    "command": "analyzerSequence.moveDown",
                    "when": "view == analyzerSequence && viewItem == file",
                    "group": "inline"
                }
            ]
        }
    },
    "dependencies": {
        "@types/mkdirp": "^1.0.0",
        "@types/rimraf": "^3.0.0",
        "fs": "0.0.1-security",
        "mkdirp": "^1.0.4",
        "readline": "^1.3.0",
        "rimraf": "^3.0.2",
        "vscode": "^1.1.37"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.62",
        "@types/vscode": "^1.45.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "tslib": "^2.0.2",
        "tslint": "^5.20.0",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    }
}
