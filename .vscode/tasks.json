{
    "version": "2.0.0",
    "tasks": [
        {
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
        {
            "label": "Run Analyzer",
            "command": "nlp",
            "args": [
                "/ANAPATH",
                "C:\\git\\nlp\\analyzers\\corporate",
                "${relativeFile}"
            ],
            "options": {
                "cwd": "C:\\git\\nlp\\vtcore-vs\\nlp\\Unicode_Release\\"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Analyzer Debug",
            "dependsOn": ["Copy Text","Run Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Copy Text",
            "command": "cp",
            "args": [
                "${relativeFile}",
                "${workspaceFolder}\\output\\input.txt",
            ]
        },
        {
            "label": "Run Debug",
            "command": "nlp",
            "args": [
                "/ANAPATH",
                "C:\\git\\nlp\\analyzers\\corporate",
                "${relativeFile}",
                "/DEV"
            ],
            "options": {
                "cwd": "C:\\git\\nlp\\vtcore-vs\\nlp\\Unicode_Release\\"
            }
        }
	]
}