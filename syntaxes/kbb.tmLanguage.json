{
    "scopeName": "source.kbb",
    "fileTypes": [
        "kbb"
    ],
    "name": "kbb",
    "patterns": [
        {
            "include": "#expression"
        }
    ],
    "repository": {
        "expression": {
            "name": "meta.expression.kbb",
            "patterns": [
                {
                    "include": "#comment-line"
                },
                {
                    "include": "#top-concept"
                },
                {
                    "include": "#concept-name1"
                },
                {
                    "include": "#concept-name2"
                },
                {
                    "include": "#attribute-name"
                },
                {
                    "include": "#attributes"
                }                
            ]
        },
        "top-concept": {
            "match": "^([\\w\\d]+)$",
            "name": "keyword.other.kbb"
        },
        "concept-name1": {
            "name": "variable.parameter.nlp",
            "match": "^\\s\\s[\\w\\d][^:^\\[]+:"
        },
        "concept-name2": {
            "name": "keyword.node.tree",
            "match": "^\\s\\s\\s\\s[\\w\\d][^:^\\[]+:"
        },
        "attribute-name": {
            "name": "constant.numeric.tree",
            "match": "\\b[\\w\\d]+="
        },
        "attributes": {
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                {
                    "include": "#number"
                },
                {
                    "include": "#qstring-double"
                },
                {
                    "include": "#comment"
                }
            ],
            "name": "meta.attribute.kbb"
        },
        "comment": {
            "match": "\\*.*$\\n?",
            "name": "comment.line.kbb"
        },
        "qstring-double": {
            "begin": "\"",
            "end": "\\\"|(?:[^\\\\\\n]$)",
            "name": "string.double.kbb",
            "patterns": [
                {
                    "include": "#string-character-escape"
                }
            ]
        },
        "string-character-escape": {
            "match": "\\\\(x\\h{2}|[0-2][0-7]{,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)",
            "name": "constant.character.escape.kbb"
        },
        "number": {
            "match": "\\b[\\d]+\\b",
            "name": "constant.numeric.kbb"
        },
        "comment-line": {
            "match": "\\s*#.*$\\n?",
            "name": "comment.line.dict"
        }
    }
}