{
    "scopeName": "source.txxt",
    "fileTypes": [
        "txxt"
    ],
    "name": "TXXT",
    "patterns": [{ "include": "#expression" }],

    "repository": {
        "expression": {
            "name": "meta.expression.tree",
            "patterns": [
                {
                    "include": "#angle-highlight"
                },
                {
                    "include": "#paren-highlight"
                }               
            ]
        },
        "angle-highlight": {
            "begin": "\\<\\<",
            "end": "\\>\\>",
            "beginCaptures": {
                "0": { "name": "variable.parameter.txxt" }
            },
            "endCaptures": {
                "0": { "name": "variable.parameter.txxt" }
            },
            "name": "keyword.other.txxt"
        },
        "paren-highlight": {
            "begin": "\\(\\(",
            "end": "\\)\\)",
            "beginCaptures": {
                "0": { "name": "variable.parameter.txxt" }
            },
            "endCaptures": {
                "0": { "name": "variable.parameter.txxt" }
            },
            "name": "comment.line.txxt"
        }
    }
}